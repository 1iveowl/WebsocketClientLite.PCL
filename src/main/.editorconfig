# top-most EditorConfig file
root = true

# C# files
[*.cs]
# Use recommended Microsoft analyzers + performance
dotnet_analyzer_diagnostic.category-Performance.severity = warning
# Treat allocation-focused rules as warnings
# CA1822: Mark members as static
dotnet_diagnostic.CA1822.severity = suggestion
# CA1825: Avoid zero-length array allocations
dotnet_diagnostic.CA1825.severity = warning
# CA1835: Prefer 'Memory' overloads for 'ReadAsync'/'WriteAsync'
dotnet_diagnostic.CA1835.severity = warning
# CA1812: Avoid uninstantiated internal classes
dotnet_diagnostic.CA1812.severity = suggestion
# CA1820: Test for empty strings using string length
dotnet_diagnostic.CA1820.severity = suggestion
# CA1826: Use 'AsSpan' instead of 'Substring'
dotnet_diagnostic.CA1826.severity = suggestion
# CA1831: Use 'AsSpan' for string-based searches
dotnet_diagnostic.CA1831.severity = suggestion
# CA1836: Prefer 'IsEmpty' over 'Count'
dotnet_diagnostic.CA1836.severity = suggestion
# CA1837: Use 'Environment.ProcessId'
dotnet_diagnostic.CA1837.severity = suggestion
# CA1838: Avoid 'StringBuilder' parameters for P/Invokes
dotnet_diagnostic.CA1838.severity = suggestion
# CA1842: Do not use 'WhenAll' with a single task
dotnet_diagnostic.CA1842.severity = suggestion
# CA1843: Do not use 'WaitAll' with a single task
dotnet_diagnostic.CA1843.severity = suggestion
# CA1845: Use span-based 'string.Concat'
dotnet_diagnostic.CA1845.severity = suggestion
# CA1846: Prefer 'AsSpan' over 'Substring' for string indexers
dotnet_diagnostic.CA1846.severity = suggestion
# CA1852: Seal internal types
dotnet_diagnostic.CA1852.severity = suggestion
# CA1860: Avoid using 'Enumerable.Any' to test if a sequence contains any matching element
dotnet_diagnostic.CA1860.severity = suggestion
# CA1861: Avoid constant arrays as arguments
dotnet_diagnostic.CA1861.severity = suggestion
# CA1869: Cache and reuse trimmed strings
dotnet_diagnostic.CA1869.severity = suggestion
# CA1870: Do not use 'Count' or 'LongCount' when Any can be used
dotnet_diagnostic.CA1870.severity = suggestion
